<div class="media" id="item-<%= item.id %>">
  <div class="media-body">
    <h4 class="media-heading">
      <%= item.name %>
    </h4>
    <%= link_to "", [@user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>
    <small>
      submitted <%= time_ago_in_words(item.created_at) %> ago
    </small>
  </div>
</div>
